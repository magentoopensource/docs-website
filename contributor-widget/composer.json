{
    "name": "ukmeds/github-contributors-widget",
    "description": "Production-grade GitHub contributors widget for Magento 2 documentation",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "UK Meds Development Team",
            "email": "dev@ukmeds.co.uk"
        }
    ],
    "require": {
        "php": "^8.0",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-mbstring": "*",
        "guzzlehttp/guzzle": "^7.5",
        "vlucas/phpdotenv": "^5.5",
        "monolog/monolog": "^3.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "phpstan/phpstan": "^1.10",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "autoload": {
        "psr-4": {
            "ContributorsWidget\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ContributorsWidget\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": "phpunit",
        "stan": "phpstan analyse src --level=8",
        "cs": "phpcs --standard=PSR12 src/",
        "cbf": "phpcbf --standard=PSR12 src/"
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
